$(document).ready(function() {
  get_processes_type();
  get_faculties();
  get_routes();
});


function get_processes_type(){
  
  $.get("/admin/process-type/all", function(processes_type, status){
    
    console.log(processes_type);
    var select_process = $('#process_type');
    processes_type.forEach(function (process_type) {
        var option = new Option(process_type.name, process_type.id_process_type);
        $(option).html(process_type.name);
        select_process.append(option);
    });
  });
} 


function get_faculties(){

  $.get("/admin/faculty/all", function(faculties, status){
    
    var select_faculty = $('#faculty');
    faculties.forEach(function (faculty) {
        var option = new Option(faculty.name, faculty.id_faculty);
        $(option).html(faculty.name);
        select_faculty.append(option);
    });
  });
} 



function get_routes(){
  
  $.get("/admin/electoral-list/all", function(routes, status){
    console.log(routes);
    var table = $('#tabla_route');
    //table.find("tbody tr").remove();
    var i=1;
    routes.forEach(function (route) {
      table.append("<tr><td>" + i + "</td><td>" + route.process_type.name + "</td><td>"+ route.faculty.name+ "</td><td>"+ route.name +"</td></tr>");
      i++;
    });
    $('#tabla_route').DataTable();
    //alert("Data: " + data + "\nStatus: " + status);
  });
} 

