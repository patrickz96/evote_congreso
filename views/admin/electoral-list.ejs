    }else{
      $('#edit_faculty').removeAttr('disabled');
      get_faculties('#edit_faculty',data.facultad.id_facultad);
    }
    
    $('#editModal').modal('show');
    
}

function Delete(id){
  Swal.fire({
        title: 'Usted esta a punto de eliminar el voto con id '+id,
        text: "¡Usted no podra revertir esto!",
        icon: 'warning',
        showCancelButton: true,
        reverseButtons: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'SI, CONFIRMAR'
      }).then((result) => {
        if (result.value) {              
          var rpta = $.ajax({
              type: "POST",
              dataType: "json",
              url: "/admin/electoral-list-delete",
              data: {id: id},
              cache: false,
              async: false
          }).responseText;
          if(rpta="ok"){
            location.reload();
          }
          else{
            alert(rpta);
          }
        }
      });
}



